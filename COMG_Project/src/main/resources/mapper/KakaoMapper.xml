<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kopo.poly.persistance.mapper.KakaoLoginMapper">


    <select id="getUserKakao" parameterType="CUserDTO" resultType="CUserDTO">
        SELECT * FROM USER_INFO
        WHERE KAKAO_ID = #{kakaoId}
    </select>


    <update id="insertUserKakao" parameterType="CUserDTO">
        UPDATE USER_INFO
        SET KAKAO_ID = #{kakaoId}
        WHERE USER_ID = #{user_id}
    </update>

    </mapper>